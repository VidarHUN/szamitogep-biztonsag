<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5sp"
    android:padding="10sp"
    android:background="@drawable/recycler_comment_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewCommentRecyclerUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="User"
            android:textColor="@color/appColor1"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textViewCommentRecyclerUserSays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text=" says:"
            android:textColor="@color/appColor1"
            android:textSize="18sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/textViewCommentRecyclerComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="5sp"
        android:text="@string/comment_sample_text"
        android:textColor="@color/appColor1"
        android:textSize="18sp" />


</LinearLayout>